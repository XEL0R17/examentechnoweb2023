<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Vocabulaire</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1 class="title">Apprendre l'anglais</h1>
  <h2 class="element">Liste de mots</h2>
  <table>
    <tr>
      <th>Word</th>
      <th>Translation</th>
      <th>Action</th>
    </tr>
    <% for(const voc of vocabulaires) { %>
      <tr>
        <td><%= voc.word %></td>
        <td><%= voc.translation %></td>
        <td><%= voc.action %></td>
        <td>
          <form action="/add" method="post">
            <input type="hidden" name="Word" value="<%= voc.word %>" />
            <input type="hidden" name="prix" value="<%= voc.translation %>" />
            <input type="hidden" name="taille" value="<%= voc.action %>" />
          </form>
        </td>
      </tr>
    <% } %>
  </table>
</body>
</html>
